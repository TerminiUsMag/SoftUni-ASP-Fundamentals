<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPNetCoreIntroductionExercise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPNetCoreIntroductionExercise.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box- mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASPNetCoreIntroductionExercise</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item ">
                            <a class="nav-link text-dark text-dark btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark text-dark btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Numbers">Numbers to 50</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary flex-fill" asp-area="" asp-controller="Home" asp-action="NumbersToN">Numbers To N</a>
                        </li>
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" data-bs-toggle ="dropdown">Products</button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="My-Products">All</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="AllAsJson">All (JSON)</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="AllAsText">All (Plain Text)</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="AllAsTextFile">All (Text File)</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        @*<li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary flex-fill" asp-area="" asp-controller="Product" asp-action="My-Products">All Products</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary flex-fill" asp-area="" asp-controller="Product" asp-action="AllAsJson">All Products As Json</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary flex-fill" asp-area="" asp-controller="Product" asp-action="AllAsText">All Products As Text</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark btn-outline-secondary flex-fill" asp-area="" asp-controller="Product" asp-action="AllAsTextFile">Download products.txt</a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ASPNetCoreIntroductionExercise - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
